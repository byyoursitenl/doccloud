{
    "name": "byyoursitenl/doccloud",
    "description": "PHP wrapper for DocCloud Web API. Authored and supported by ByYourSite BV.",
    "license": "BSD-3-Clause",
    "type": "library",
    "autoload": {
        "psr-4": {
            "DocCloud\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DocCloud\\": "test/"
        }
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "guzzlehttp/guzzle": "^6.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8 || ^5.7",
        "squizlabs/php_codesniffer": "^3.0",
        "symfony/var-dumper": "^3.0",
        "smalot/pdfparser": "^0.9"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpcs": "vendor/bin/phpcs src test --standard=phpcs.xml"
    }
}
